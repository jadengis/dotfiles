# vim: filetype=neomuttrc
unmailboxes *

set from = "`pass Mail/Personal/Email`"
set folder = "~/Mail/Personal"

alternates john@planengine.io 
alternates john@ezfire.io
alternates john@getreplayvalue.com

# mailbox settings
set spool_file = +INBOX
set postponed = +Drafts
set record = +Sent
set trash = +Trash
set mbox = +Archive

mailboxes =INBOX =INBOX.PlanEngine =INBOX.Ezfire =INBOX.ReplayValue
mailboxes =Archive =Archive.PlanEngine =Archive.Ezfire =Archive.ReplayValue
mailboxes =Trash =Sent =Drafts =Spam
